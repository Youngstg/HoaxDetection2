# ==========================================
# Firebase Configuration
# ==========================================
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ==========================================
# RSS Feed Configuration
# ==========================================
RSS_FEED_URL=https://www.antaranews.com/rss/terkini.xml

# ==========================================
# ML Model Configuration
# ==========================================
# Base model name (HuggingFace)
MODEL_NAME=indobenchmark/indobert-base-p1

# Path to fine-tuned model (leave empty to use MODEL_NAME)
MODEL_PATH=./hoax_model

# Set to 'true' to use ML model, 'false' to use rule-based detector
USE_ML_MODEL=true

# ==========================================
# Auto-Retrain Configuration
# ==========================================
# Minimum admin-labeled samples required before auto-retrain triggers
TRAINING_THRESHOLD=50

# Directory to store exported training datasets
TRAINING_DATASET_PATH=./training_data

# ==========================================
# Scheduler Configuration
# ==========================================
# Interval in hours for auto-retrain scheduler (daemon mode)
RETRAIN_INTERVAL_HOURS=6
